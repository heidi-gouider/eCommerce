{% extends 'base.html.twig' %}

{% block title %}detail
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

		<h1>{{product.name}}</h1>
		<img src="{{product.image}}" class="img-fluid" height="100px" weight="100px">
		<h2>{{product.description}}</h2>
		<a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success float-right">
			<i class="fas fa-shopping-cart mr-1"></i>
			Ajouter
		</a>


	</div>
{% endblock %}
