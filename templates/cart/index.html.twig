{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Voici ta brouette !
		</h1>
		{% if items | length > 0 %}
			<table class="table">
				<thead>
					<tr>

						<th>Produit</th>
						<th>Prix</th>
						<th>Quantit√©</th>
						<th>Total</th>
					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>

							<td>{{item.product.name}}</td>
							<td>{{item.product.price}}</td>
							<td>{{item.quantity}}</td>
							<td>{{item.product.price * item.quantity}}</td>
							<td>
								<a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">
									<i class="bi bi-trash"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr>
						<td colspan="3" class="text-end">Total :
						</td>
						<td>{{ total }}</td>
						<td></td>
					</tr>
				</tfoot>
			</table>
		{% else %}
			<p>
				Ta brouette est vide ;)</p>
		{% endif %}
	</div>
{% endblock %}
